            <Label x:Name="lblEstado"
                   Text="Inhalar"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            <!--fijarse si se puede hacer el estilo para los lbl-->


            <!-- CÃRCULO ANIMADO -->
            <Border x:Name="Circulo"
                    WidthRequest="150"
