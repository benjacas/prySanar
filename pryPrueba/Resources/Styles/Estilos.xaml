<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui">

    <!-- PALETA DE COLORES -->
    <Color x:Key="PrimaryColor">#FF6B9A</Color>
    <Color x:Key="SecondaryColor">#FFC3DA</Color>
    <Color x:Key="BackgroundColor">#FFF6FA</Color>
    <Color x:Key="TextDark">#333</Color>
    <Color x:Key="TextLight">#666</Color>
    <Color x:Key="CardShadow">#000000</Color>

    <!--GRADIENTE PRINCIPAL -->
    <LinearGradientBrush x:Key="PinkGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF8BB5" Offset="0"/>
        <GradientStop Color="#FF6B9A" Offset="1"/>
    </LinearGradientBrush>

    <!--SOMBRA GENERAL -->
    <Shadow x:Key="DefaultShadow"
            Brush="{StaticResource CardShadow}"
            Offset="0,7"
            Radius="15"
            Opacity="0.25"/>

    <!--ESTILOS DE TEXTO -->
    <Style TargetType="Label" x:Key="TitleLabel">
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{StaticResource TextDark}"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>

    <Style TargetType="Label" x:Key="SubtitleLabel">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="TextColor" Value="{StaticResource TextLight}"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>

    <!-- ESTILO DE TARJETAS (FRAMES) -->
    <Style TargetType="Frame" x:Key="CardStyle">
        <Setter Property="CornerRadius" Value="25"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Background" Value="{StaticResource PinkGradient}"/>
        <Setter Property="HasShadow" Value="True"/>
        <Setter Property="Shadow" Value="{StaticResource DefaultShadow}"/>
        <Setter Property="Margin" Value="25"/>
    </Style>

    <!--ESTILO PARA BOTONES -->
    <Style TargetType="Button" x:Key="PrimaryButton">
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
        <Setter Property="Padding" Value="15,10"/>
        <Setter Property="Shadow" Value="{StaticResource DefaultShadow}"/>
        <Setter Property="Margin" Value="10"/>
    </Style>

    <!-- ENTRYS (cuadros de texto) -->
    <Style TargetType="Entry" x:Key="RoundedEntry">
        <Setter Property="BackgroundColor" Value="White"/>
        <Setter Property="TextColor" Value="{StaticResource TextDark}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="HeightRequest" Value="45"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Keyboard" Value="Default"/>
        <Setter Property="Stroke" Value="LightGray"/>
        <Setter Property="StrokeThickness" Value="1.5"/>
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="15"/>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>