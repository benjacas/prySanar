<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pryPrueba.MainPage"
             Title="SANAR">


    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" BackgroundColor="White">

            <!-- Tarjeta 1 -->
            <Frame Style="{StaticResource ModernCard}">


                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Card1_Tapped" /> <!-- define cual es el gesto que tiene que tomar el frame -->
                </Frame.GestureRecognizers>

                <VerticalStackLayout>
                    <Image Source="img_suelo_pelvico.jpg" />
                    <Label Text="Ejercicios" Style="{StaticResource CardTitle}"/>
                    <Label Text="Ver lista de ejercicios" Style="{StaticResource CardSubtitle}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Tarjeta 2 -->
            <Frame class="frame">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Card2_Tapped" />
                </Frame.GestureRecognizers>

                <VerticalStackLayout>
                    <Label Text="Progreso"  />
                    <Label Text="Ver estadísticas" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
